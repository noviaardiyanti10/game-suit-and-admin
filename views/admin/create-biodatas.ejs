<!DOCTYPE html>
<html lang="en">

<%- include("../partial/head.ejs") %>

    <body class="biodatas">

        <%- include("../partial/navbar.ejs") %>

            <main class="container-fluid my-2 d-flex justify-content-center">
                <div class="card my-3 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title text-center fw-bold mt-1 mb-4">Biodata</h3>
                        <form method="post" action="/addBiodatas/<%= user.id %>">
                            <div class="row mb-2">
                                <div class="col-3 col-md-6 d-flex  align-items-center">
                                    <label for="name" class="fw-bold">Name</label>
                                </div>
                                <div class="col-9 col-md-10">
                                    <input type="text" class="form-control my-1" id="name" placeholder="Your Name" name="name">
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-3 col-md-6 d-flex  align-items-center">
                                    <label for="birth" class="fw-bold">Birth Date</label>
                                </div>
                                <div class="col-9 col-md-10">
                                    <input type="text" class="form-control my-1" id="birth" name="birth_date">
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-3 col-md-6 d-flex  align-items-center">
                                    <label for="email" class="fw-bold">Email</label>
                                </div>
                                <div class="col-9 col-md-10">
                                    <input type="email" class="form-control my-1" id="email" placeholder="example@axample.com" name="email">
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-3 col-md-6 d-flex  align-items-center">
                                    <label for="phone_number" class="fw-bold">Phone Number</label>
                                </div>
                                <div class="col-9 col-md-10">
                                    <input type="text" class="form-control my-1" id="phone_number" placeholder="0873458902" name="phone_number">
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-3 col-md-6 d-flex  align-items-center">
                                    <label for="address" class="fw-bold">Address</label>
                                </div>
                                <div class="col-9 col-md-10">
                                    <textarea type="text" class="form-control my-1" rows=3 id="address" placeholder="Your Home Address" name="address"></textarea>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center align-items-center">
                                <button class="btn btn-success text-white fw-bold rounded-pill" type="submit">CREATE</button>
                            </div>
                        </form>
                    </div>
                </div>


            </main>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
    </body>

</html>