<!DOCTYPE html>
<html lang="en">

<%- include("../partial/head.ejs") %>

    <body class="users">

        <%- include("../partial/navbar.ejs") %>

            <main class="container-fluid my-4 ">

                <div class="head-title my-5 px-4">
                    <h3 class="fw-bold text-center">Data Biodata</h3>
                </div>

                <div class="table table-responsive tableFixHead shadow-sm ">
                    <table class="table table-fixed  ">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Birth Date</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone Number</th>
                                <th scope="col">Address</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% i=1;
                             biodatas.forEach(bio => { %>


                                <tr>
                                    <th scope="row" class="my-1">
                                        <%= i++ %>
                                    </th>
                                    <td>
                                        <%= bio.name %>
                                    </td>
                                    <td>
                                        <%= bio.birth_date %>
                                    </td>
                                    <td>
                                        <%= bio.User.username %>
                                    </td>

                                    <td>
                                        <%= bio.email %>
                                    </td>
                                    <td>
                                        <%= bio.phone_number %>
                                    </td>
                                    <td>
                                        <%= bio.address %>
                                    </td>
                                    <td>
                                        <div class="col-md-12">
                                            <a href="/biodata/<%= bio.id %>/update">
                                                <button type="submit" class="btn btn-info text-white fw-bolder mx-1 my-1 rounded-pill"><i class="fas fa-edit"></i></button>
                                            </a>

                                            <a href="/biodata/<%= bio.id %>/delete" title="Hapus data">
                                                <button type="submit" class="btn btn-danger text-white fw-bolder rounded-pill"><i class="fas fa-trash-alt"></i></button>
                                            </a>

                                    </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
                    </div>
            </main>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>

    </body>

</html>