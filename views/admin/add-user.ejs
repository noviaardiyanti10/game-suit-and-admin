<!DOCTYPE html>
<html lang="en">

<%- include("../partial/head.ejs") %>

    <body class="biodatas">

        <%- include("../partial/navbar.ejs") %>
            <% if(message.length > 0){ %>
                <div class="d-flex justify-content-end m-0">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%=message%>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
                <% } %>

                    <main class="container-fluid my-2 d-flex justify-content-center">
                        <div class="card card-user shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title text-center fw-bold mt-1 mb-4">User</h3>
                                <form method="POST" action="/addUser">
                                    <div class="row mb-2">
                                        <div class="col-3 col-md-12 d-flex  align-items-center">
                                            <label for="username" class="fw-bold">Username</label>
                                        </div>
                                        <div class="col-9 col-md-9 mb-4">
                                            <input type="text" class="form-control my-1" id="username" placeholder="Your Username" name="username" required>
                                        </div>
                                        <div class="col-3 col-md-12 d-flex  align-items-center">
                                            <label for="password" class="fw-bold">Password</label>
                                        </div>
                                        <div class="col-9 col-md-9 mb-4">
                                            <input type="password" class="form-control my-1" id="password" placeholder="Your password" name="password" required>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center py-4">
                                        <button class="btn btn-success text-white fw-bold rounded-pill" type="submit">CREATE</button>
                                    </div>
                                </form>
                            </div>
                        </div>


                    </main>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
    </body>

</html>