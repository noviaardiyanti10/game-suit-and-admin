<!DOCTYPE html>
<html lang="en">

<%- include("../partial/head.ejs") %>

    <body class="users">

        <%- include("../partial/navbar.ejs") %>

            <main class="container-fluid my-4 ">

                <div class="head-title my-3 px-4">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <h3 class="fw-bold">Data User</h3>
                        </div>

                        <div class=" d-flex justify-content-end add-user col-12 col-md-5 ">
                            <a href="/addUser" title="Add User Game">
                                <button class="btn btn-success rounded-pill fs-6" type="submit"><i class="fas fa-plus-square px-2"></i>Add User</button>
                            </a>
                        </div>


                    </div>
                </div>

                <div class="table table-responsive tableFixHead shadow-sm px-4">
                    <table class="table table-fixed  ">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">User ID</th>
                                <th scope="col">Username</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>


                                <tr>
                                    <th scope="row" class="my-1">
                                        <%= user.id %>
                                    </th>
                                    <td>
                                        <%= user.username %>
                                    </td>

                                    <td>
                                        <div class="col-md-12">
                                            <a href="/users/<%= user.id %>/delete" title="Delete User">
                                                <button type="submit" class="btn btn-danger text-white fw-bolder mx-1 rounded-pill"><i class="fas fa-trash-alt"></i></button>
                                            </a>


                                            <% if (user.Biodatum === null) { %>

                                                <a href="/addBiodatas/<%= user.id %>" title="Create Biodata User">
                                                    <button type="submit" class="btn btn-success text-white fw-bolder m-2 rounded-pill"><i class="fas fa-plus-square"></i></button>
                                                </a>
                                        </div>

                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </main>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>

    </body>

</html>