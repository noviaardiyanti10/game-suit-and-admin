<!DOCTYPE html>
<html lang="en">

<%- include("../partial/head.ejs") %>

    <body class="biodatas">


        <%- include("../partial/navbar.ejs") %>

            <% if(message.length > 0){ %>
                <div class="d-flex justify-content-end m-0">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%=message%>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
                <% } %>
                    <main class="container-fluid my-2 d-flex justify-content-center">
                        <div class="card my-3 shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title text-center fw-bold mt-1 mb-4">Biodata</h3>
                                <form method="POST" action="/biodatas/<%=biodata.id  %> /update">
                                    <div class="row mb-2">
                                        <div class="col-3 col-md-6 d-flex  align-items-center">
                                            <label for="name" class="fw-bold">Name</label>
                                        </div>
                                        <div class="col-9 col-md-10">
                                            <input type="text" class="form-control my-1" id="name" name="name" value="<%=biodata.name%>" placeholder="Your Name" required>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-3 col-md-6 d-flex  align-items-center">
                                            <label for="username" class=" fw-bold ">Username</label>
                                        </div>
                                        <div class="col-9 col-md-10 ">
                                            <input type="text " class="form-control my-1 " id="username" name="username" value="<%=biodata.User.username%>" placeholder="Your username" required>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-3 col-md-6 d-flex  align-items-center">
                                            <label for="birth" class="fw-bold">Birth Date</label>
                                        </div>
                                        <div class="col-9 col-md-10">
                                            <input type="text" class="form-control my-1" id="birth" name="birth_date" required value="<%=biodata.birth_date%> ">
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-3 col-md-6 d-flex  align-items-center">
                                            <label for="email" class="fw-bold">Email</label>
                                        </div>
                                        <div class="col-9 col-md-10">
                                            <input type="email" class="form-control my-1" id="email" name="email" required value="<%=biodata.email%> " placeholder="example@axample.com">
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-3 col-md-6 d-flex  align-items-center">
                                            <label for="phone_number" class="fw-bold">Phone Number</label>
                                        </div>
                                        <div class="col-9 col-md-10">
                                            <input type="text" class="form-control my-1" id="phone_number" name="phone_number" required value="<%=biodata.phone_number%> " placeholder="0873458902">
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-3 col-md-6">
                                            <label for="address" class="fw-bold">Address</label>
                                        </div>
                                        <div class="col-9 col-md-10">
                                            <textarea type="text" class="form-control my-1" rows=3 id="address" required placeholder="Your Home Address"><%=biodata.address%></textarea>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center align-items-center">
                                        <button class="btn btn-warning text-white fw-bold rounded-pill" type="submit" value="Update Biodata">UPDATE</button>
                                    </div>
                                </form>
                            </div>
                        </div>


                    </main>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>
    </body>

</html>