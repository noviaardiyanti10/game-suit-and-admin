<!DOCTYPE html>
<html lang="en">

<%- include("partial/head.ejs") %>

    <body class="login-body">
        <% if(message.length > 0){ %>
            <div class="d-flex justify-content-end m-0">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%=message%>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            <% } %>

                <div class="container py-5">
                    <div class="row d-flex justify-content-center align-items-center my-2">
                        <div class="col-10 col-md-8 col-lg-5 col-xl-5 ">
                            <div class="card shadow-lg py-4 ">
                                <div class="card-body txt-login mx-3">
                                    <h1 class="card-title text-center fw-bold">Welcome!</h1>
                                    <p class="pb-4 text-center text-secondary">Please enter your username and password</p>

                                    <form method="post" action="/login-admin">
                                        <div class="form-floating my-2 ">
                                            <input type="text" class="form-control bg-form" id="floatingInput" name="username" placeholder="Username" required>
                                            <label class="form-label" for=" floatingInput">Username</label>
                                        </div>


                                        <div class="form-floating ">
                                            <input type="password" class="form-control bg-form" id="floatingInput " name="password" placeholder="Password" required>
                                            <label for="floatingInput">Password</label>
                                        </div>


                                        <div class="form-check my-4">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                            <label class="form-check-label fw-bold" for="exampleCheck1">Remember me</label>
                                        </div>

                                        <div class="d-flex justify-content-center align-items-center">
                                            <button class="btn btn-info text-white p-3 w-75 fw-bold rounded-pill" type="submit">LOGIN</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js " integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM " crossorigin="anonymous "></script>

    </body>

</html>